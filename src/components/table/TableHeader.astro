<div class="px-4 py-3 pb-6">
  <div class="breadcrumbs text-sm">
    <ul>
      <li><a>Home</a></li>
      <li><a>E-Commerce</a></li>
      <li>Products</li>
    </ul>
  </div>
  <div class="mt-2">
    <div class="text-2xl font-bold">All products</div>
    <div class="mt-4 flex gap-4 justify-between flex-wrap">
      <input type="search" class="input" placeholder="Search here..." />
      <div class="flex gap-2">
        <button class="btn btn-primary">
          <i class="ti ti-refresh text-xl"></i>
          <span>Refresh</span>
        </button>
        <button class="btn btn-primary" onclick="add_product.showModal()">
          <i class="ti ti-plus text-xl"></i>
          <span>Add Product</span>
        </button>
      </div>
    </div>
  </div>
</div>
<dialog id="add_product" class="modal">
  <div class="modal-box">
    <h3 class="text-lg font-bold">NEW PRODUCT</h3>
    <div class="py-4">
      <form class="space-y-2">
        <label class="floating-label">
          <span>Product name</span>
          <input
            type="text"
            placeholder="Product name"
            class="input focus:outline-none focus:border-primary focus:ring ring-primary w-full rounded-md"
          />
        </label>
        <label class="floating-label">
          <span>Price</span>
          <input
            type="number"
            placeholder="$999"
            class="input focus:outline-none focus:border-primary focus:ring ring-primary w-full rounded-md"
          />
        </label>
      </form>
    </div>
    <div class="modal-action">
      <form method="dialog">
        <!-- if there is a button in form, it will close the modal -->
        <button class="btn">Close</button>
      </form>
      <button class="btn btn-primary">Save</button>
    </div>
  </div>
</dialog>
